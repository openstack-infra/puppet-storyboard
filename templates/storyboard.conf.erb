[DEFAULT]
# Default log level is INFO
# verbose and debug has the same result.
# One of them will set DEBUG log level output
# debug = False
# verbose = False

# Where to store lock files
lock_path = $state_path/lock

# Storyboard's working directory. Please ensure that the storyboard user has
# read/write access to this directory.
working_directory = <%= scope.lookupvar("storyboard::params::working_root") %>

# log_format = %(asctime)s %(levelname)8s [%(name)s] %(message)s
# log_date_format = %Y-%m-%d %H:%M:%S

# use_syslog                           -> syslog
# log_file and log_dir                 -> log_dir/log_file
# (not log_file) and log_dir           -> log_dir/{binary_name}.log
# use_stderr                           -> stderr
# (not user_stderr) and (not log_file) -> stdout
# publish_errors                       -> notification system

# use_syslog = False
# syslog_log_facility = LOG_USER

# use_stderr = True
# log_file =
# log_dir =

# publish_errors = False

# Address to bind the API server
# bind_host = 0.0.0.0

# Port the bind the API server to
# bind_port = 8080

# List paging configuration options.
# page_size_maximum = 500
# page_size_default = 20

# Enable notifications. This feature drives deferred processing, reporting,
# and subscriptions.
enable_notifications = <%= scope.lookupvar("storyboard::params::enable_notifications") ? 'True' : 'False' %>

[oauth]
# StoryBoard's oauth configuration.

# OpenId Authentication endpoint
openid_url = <%= scope.lookupvar("storyboard::params::openid_url") %>

# Time in seconds before an authorization code expires.
authorization_code_ttl = <%= scope.lookupvar("storyboard::params::authorization_code_ttl") %>

# Time in seconds before an access_token expires
access_token_ttl = <%= scope.lookupvar("storyboard::params::access_token_ttl") %>

# Time in seconds before an refresh_token expires
refresh_token_ttl = <%= scope.lookupvar("storyboard::params::refresh_token_ttl") %>

# A list of valid client id's that may connect to StoryBoard.
valid_oauth_clients = <%= scope.lookupvar("storyboard::params::valid_oauth_clients").join(',') %>

[cron]
# Storyboard's cron management configuration

# Enable or disable cron (Default disabled)
# enable = <%= scope.lookupvar("storyboard::params::enable_cron") %>

<% if scope.lookupvar("storyboard::params::cors_allowed_origins").size > 0 %>
[cors]
# W3C CORS configuration. For more information, see http://www.w3.org/TR/cors/

# List of permitted CORS domains.
allowed_origins = <%= scope.lookupvar("storyboard::params::cors_allowed_origins").join(',') %>

# CORS browser options cache max age (in seconds)
max_age=<%= scope.lookupvar("storyboard::params::cors_max_age") %>

<% end %>

[database]
# This line MUST be changed to actually run storyboard
# Example:
# connection = mysql://root:pass@127.0.0.1:3306/storyboard
# Replace 127.0.0.1 above with the IP address of the database used by the
# main storyboard server. (Leave it as is if the database runs on this host.)
connection=<%= scope.lookupvar("storyboard::params::mysql_connection_string") %>

# The SQLAlchemy connection string used to connect to the slave database
# slave_connection =

# Database reconnection retry times - in event connectivity is lost
# set to -1 implies an infinite retry count
# max_retries = 10

# Database reconnection interval in seconds - if the initial connection to the
# database fails
# retry_interval = 10

# Minimum number of SQL connections to keep open in a pool
# min_pool_size = 1

# Maximum number of SQL connections to keep open in a pool
# max_pool_size = 10

# Timeout in seconds before idle sql connections are reaped
# idle_timeout = 3600

# If set, use this value for max_overflow with sqlalchemy
# max_overflow = 20

# Verbosity of SQL debugging information. 0=None, 100=Everything
# connection_debug = 0

# Add python stack traces to SQL as comment strings
# connection_trace = False

# If set, use this value for pool_timeout with sqlalchemy
# pool_timeout = 10

[notifications]

# Host of the rabbitmq server.
rabbit_host=<%= scope.lookupvar("storyboard::params::rabbitmq_host") %>

# The RabbitMQ login method
rabbit_login_method = AMQPLAIN

# The RabbitMQ userid.
rabbit_userid = <%= scope.lookupvar("storyboard::params::rabbitmq_user") %>

# The RabbitMQ password.
rabbit_password = <%= scope.lookupvar("storyboard::params::rabbitmq_user_password") %>

# The RabbitMQ broker port where a single node is used.
rabbit_port = <%= scope.lookupvar("storyboard::params::rabbitmq_port") %>

# The virtual host within which our queues and exchanges live.
rabbit_virtual_host = <%= scope.lookupvar("storyboard::params::rabbitmq_vhost") %>

[plugin_token_cleaner]
# Enable/Disable the token cleaning cron plugin. This requires cron
# management to be enabled.
# enable = <%= scope.lookupvar("storyboard::params::enable_token_cleanup") ? 'True' : 'False' %>
